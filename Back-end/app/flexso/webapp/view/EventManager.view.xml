<mvc:View
    controllerName="flexso.controller.EventManager"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
>
    <m:App id="create_event">
        <m:Page id="_IDGenPage1"
        title="Create Event"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <f:SimpleForm
            id="eventForm"
            editable="true"
            layout="ResponsiveGridLayout"
            title="New Event"
        >
            <f:content>
                <m:Label id="_IDGenLabel1" text="Name"/>
                <m:Input id="eventName" value="{eventModel>/name}"/>

                <m:Label id="_IDGenLabel2" text="Description"/>
                <m:Input id="eventDescription" value="{eventModel>/description}"/>

                <m:Label id="_IDGenLabel3" text="Date"/>
                <m:DatePicker id="eventDate" value="{eventModel>/date}"/>

                <m:Label id="_IDGenLabel4" text="Location"/>
                <m:Input id="eventLocation" value="{eventModel>/location}"/>
            </f:content>
        </f:SimpleForm>
        
        <m:Button id="_IDGenButton1" text="Save Event" press=".onSaveEvent"/>
        <m:Button id="_IDGenButton2" text="Add Sessions" press=".onAddSessions"/>
    </m:Page>
    </m:App>
</mvc:View>
